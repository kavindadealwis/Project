<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kavinda.farmbuddy3">

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="FarmBuddy"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Green"
            android:parentActivityName=".Home"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Garden"
            android:parentActivityName=".Home"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Gardenwell"
            android:parentActivityName=".Garden"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Gardentank"
            android:parentActivityName=".Garden"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Gardenrain"
            android:parentActivityName=".Garden"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Gardensoil"
            android:parentActivityName=".Garden"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Greensoil"
            android:parentActivityName=".Green"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Greenhumidity"
            android:parentActivityName=".Green"
            android:theme="@style/AppTheme" />
        <activity android:name=".Message"></activity>
    </application>

</manifest>